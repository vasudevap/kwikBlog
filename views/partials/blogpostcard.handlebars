<div class="blogcard">
    <div class="blogcard-header">
        <div class="pv-posttitle">
            {{#if (isdefined inCommentMode)}}
            {{posttitle}}
            {{else}}
            <a href="/blogposts/{{id}}">{{posttitle}}</a>
            {{/if}}
        </div>
        <div class="pv-postinfo">Posted by {{user.username}} on {{postdate}}
        </div>
    </div>
    <div class="blogcard-body">{{postbody}}</div>
</div>