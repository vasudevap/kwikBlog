<div class="blogcard d-flex flex-column p-2">
    <div class="blogcard-header">Update Post
    </div>
    <div class="blogcard-body">

        <form class="commentForm d-grid">
            <label for="inputPostTitle" class="d-grid form-label">Title</label>
            <input class="d-grid loginSignupBtn inputPostTitle" type="text" id="inputPostTitle" name="inputPostTitle" value="{{posttitle}}"/>
            <label for="inputPostBody" class="form-label">Content</label>
            <textarea class="d-grid form-control inputPostBody" id="inputPostBody" rows="3">{{postbody}}</textarea>
            <div class="d-grid loginSignupBtn">
                <button class="btn btn-secondary updatePostBtn" type="submit">Update</button>
            </div>
                        <div class="d-grid loginSignupBtn">
                <button class="btn btn-secondary deletePostBtn" type="submit">Delete</button>
            </div>
            <input type="hidden" id="userId" class="userId" name="userId" value="{{userId}}" />
            <input type="hidden" id="postId" class="postId" name="postId" value="{{id}}" />
        </form>
    </div>
</div>

<script src="/js/updatePost.js"></script>